{
  "name": "betting-architectures",
  "version": "1.0.0",
  "description": "Different architecture implementations for betting system",
  "scripts": {
    "build": "npm run build:clean && npm run build:ddd && npm run build:hexagonal",
    "build:clean": "cd clean && npm run build",
    "build:ddd": "cd ddd && npm run build",
    "build:hexagonal": "cd hexagonal && npm run build",
    "start": "npm run start:clean & npm run start:ddd & npm run start:hexagonal",
    "start:clean": "cd clean && npm run start",
    "start:ddd": "cd ddd && npm run start",
    "start:hexagonal": "cd hexagonal && npm run start",
    "start:dev": "npm run start:dev:clean & npm run start:dev:ddd & npm run start:dev:hexagonal",
    "start:dev:clean": "cd clean && npm run start:dev",
    "start:dev:ddd": "cd ddd && npm run start:dev",
    "start:dev:hexagonal": "cd hexagonal && npm run start:dev"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/typeorm": "^10.0.0",
    "typeorm": "^0.3.0",
    "pg": "^8.11.0",
    "redis": "^4.6.0",
    "kafkajs": "^2.2.0",
    "class-validator": "^0.14.0",
    "class-transformer": "^0.5.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/express": "^4.17.0",
    "typescript": "^5.0.0",
    "ts-node-dev": "^2.0.0"
  }
} 